  <div id="startScreen">
    <img src="https://i.ibb.co/svqzV0c/click.gif" width="120">
    <span>ç‚¹è¿™é‡Œ</span>
  </div>

  <!-- å€’è®¡æ—¶ -->
  <div id="countdown"></div>

  <!-- æœ€ç»ˆç¥ç¦ -->
  <div id="finalMessage">ğŸ‰ ç”Ÿæ—¥å¿«ä¹!!! ğŸ‰</div>

  <canvas id="canvas"></canvas>

  <script>
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");

    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    // ================= çƒŸèŠ±ç±» =================
    class Firework {
      constructor(x, y, color) {
        this.x = x;
        this.y = y;
        this.color = color;
        this.radius = 2;
        this.vx = (Math.random() - 0.5) * 8;
        this.vy = (Math.random() - 0.5) * 8;
        this.alpha = 1;
      }

      update() {
        this.x += this.vx;
        this.y += this.vy;
        this.alpha -= 0.015;
      }

      draw() {
        ctx.globalAlpha = this.alpha;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
        ctx.fillStyle = this.color;
        ctx.fill();
      }
    }

    let fireworks = [];

    function createFirework(x, y) {
      const color = `hsl(${Math.random() * 360}, 100%, 50%)`;
      for (let i = 0; i < 60; i++) {
        fireworks.push(new Firework(x, y, color));
      }
    }

    function randomFirework() {
      const x = Math.random() * canvas.width;
      const y = Math.random() * canvas.height * 0.7;
      createFirework(x, y);
    }

    // ================= åŠ¨ç”»å¾ªç¯ =================
    function animate() {
      ctx.fillStyle = "rgba(0,0,0,0.2)";
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      fireworks.forEach((fw, i) => {
        fw.update();
        fw.draw();
        if (fw.alpha <= 0) fireworks.splice(i, 1);
      });

      requestAnimationFrame(animate);
    }
    animate();

    // ================= é¡µé¢æµç¨‹ =================
    const startScreen = document.getElementById("startScreen");
    const countdownDiv = document.getElementById("countdown");
    const finalMessage = document.getElementById("finalMessage");

    startScreen.addEventListener("click", () => {
      startScreen.style.display = "none";

      let count = 3;
      countdownDiv.style.display = "block";
      countdownDiv.innerText = count;

      // å€’è®¡æ—¶é¢„çƒ­çƒŸèŠ±
      let preFire = setInterval(() => {
        createFirework(
          Math.random() * canvas.width,
          canvas.height * 0.6
        );
      }, 500);

      let timer = setInterval(() => {
        count--;
        countdownDiv.innerText = count;

        if (count === 0) {
          clearInterval(timer);
          clearInterval(preFire);
          countdownDiv.style.display = "none";

          // ä¸»çƒŸèŠ±ï¼ˆæŒç»­ï¼‰
          setInterval(randomFirework, 300);

          // 10ç§’åæ˜¾ç¤ºç¥ç¦æ–‡å­—ï¼ˆçƒŸèŠ±ä¸åœï¼‰
          setTimeout(() => {
            finalMessage.style.display = "block";
          }, 10000);
        }
      }, 1000);
    });

    window.addEventListener("resize", () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  </script>

